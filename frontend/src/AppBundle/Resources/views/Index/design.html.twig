{% extends 'AppBundle:Layouts:base-template.html.twig' %}

{% block pageTitle %}Design stuff{% endblock %}

{% block content %}

<h2 class="govuk-heading-l">Search bar</h2>

<div class="govuk-form-group">
    <form>
        <fieldset class="govuk-fieldset">
            <legend class="govuk-visually-hidden">Search</legend>
            <label for="search" class="govuk-label">Search by client name or court order number</label>
            <input type="text" id="search" class="govuk-input govuk-!-width-one-half">
            <input class="govuk-button" type="submit" value="Search">
        </fieldset>
    </form>
</div>


<hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">

<h2 class="govuk-heading-l">Alerts</h2>

<div class="govuk-alert govuk-alert--notification">
    <span class="govuk-icon govuk-icon--notification"></span>
    <div class="govuk-alert__message">
        <p>This is a notice</p>
    </div>
</div>

<div class="govuk-alert govuk-alert--success">
