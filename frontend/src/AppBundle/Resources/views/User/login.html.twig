{% extends 'AppBundle:Layouts:base-template.html.twig' %}

{% block content %}

{% if error %}
    <div class="behat-region-form-errors">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('login') }}" method="post">
    Login with user1/password<br/>
    <label for="username">Username:</label>
    <input type="text" id="login_username" name="_username" value="" />

    <label for="password">Password:</label>
    <input type="password" id="login_password" name="_password" />

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit" id="login_submit">login</button>
</form>

{% endblock %}