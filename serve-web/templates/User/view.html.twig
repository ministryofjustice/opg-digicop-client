{% extends 'base.html.twig' %}

{% block htmlTitle %}{{ user.fullName }}{% endblock %}

{% block beforeContent %}
    <a href="{{ path('view-users') }}" class="govuk-back-link">Back</a>
{% endblock %}

{% block pageTitle %}
    <h1 class="govuk-heading-l">
        <span class="govuk-caption-l">Users</span>
        {{ user.fullName }}
    </h1>
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <dl class="govuk-summary-list govuk-summary-list--no-border">
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Email
                    </dt>
                    <dd class="govuk-summary-list__value">
                        {{ user.email }}
                    </dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Contact number
                    </dt>
                    <dd class="govuk-summary-list__value">
                        {{ user.phoneNumber | default('-') }}
                    </dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Role
                    </dt>
                    <dd class="govuk-summary-list__value">
                        {{ user.isAdmin ? 'Admin' : 'Case manager' }}
                    </dd>
                </div>
            </dl>

            <a href="{{ path('edit-user', { id: user.id }) }}" class="govuk-button govuk-button--secondary" data-module="govuk-button">
                Edit details
            </a>
        </div>
    </div>
{% endblock %}
