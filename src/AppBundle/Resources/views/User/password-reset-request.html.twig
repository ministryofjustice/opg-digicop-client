{% extends 'AppBundle:Layouts:base-template.html.twig' %}
{% form_theme form 'AppBundle:Form:govuk_frontend.html.twig' %}
{% import 'AppBundle:Macros:_macros.html.twig' as macro %}

{% block htmlTitle %}Password reset{% endblock %}
{% block pageTitle %}
    <h1 class="govuk-heading-xl">Password reset</h1>
{% endblock %}

{% block validationSummary %}
    {{ macro.errorSummary(form) }}
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {{ form_start(form) }}
            {{ form_row(form.email) }}
            {{ form_widget(form.submit) }}
            {{ form_end(form) }}
        </div>
    </div>

    <p>
        <a href="{{ path('login') }}">Return to sign in</a>
    </p>

{% endblock %}
