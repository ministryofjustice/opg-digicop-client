{% extends 'Layouts/base-template.html.twig' %}
{% form_theme form 'Form/govuk_frontend.html.twig' %}

{% block htmlTitle %}Confirm{% endblock %}
{% block pageTitle %}
    <span class="govuk-caption-l">{{ order.client.caseNumber }} {{ order.client.clientName }}</span>
    <h1 class="govuk-heading-l">Confirm delete</h1>
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <p>Please confirm.</p>

            <p class="govuk-!-font-weight-bold">You will not be able to undo this change once you have clicked 'Confirm'.</p>
        </div>
    </div>

    {{ form_start(form) }}
    {{ form_widget(form.submit, {'label': 'Confirm'}) }}
    <a href="{{ path('order-summary', {'orderId': order.id}) }}" class="govuk-link govuk-!-margin-left-3 govuk-!-padding-top-2 govuk-link--button">Cancel</a>

    {{ form_end(form) }}


{% endblock %}
